<style>
    body {
        background-color: #474747;
        padding: 50px;
        display: flex;
        align-content: center;
        justify-content: center;
        font-family: 'Montserrat', sans-serif;
    }
    .main {
        height: 100%;
        width: 50%;
        display: flex;
        align-content: center;
        justify-content: center;
        background-color: #cccccc;
        border-left: 10px solid #e8175d;
        border-radius: 0px 35px 35px 0px;
        filter: drop-shadow(25px 25px 9px #363636);
    }
    .main .box {
        width: 100%;
        height: 525px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    .main .box .title {
        font-size: 50px;
        margin: 0px;
    }
    .main .box .upload {
        margin-top: 5%;
        width: 44%;
        padding: 2%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #E8175D;
        color: #fff;
        font-size: 22px;
        cursor: pointer;
    }
    .main .box .upload:hover {
        background-color: #CC527A;
        cursor: pointer;
    }
    .hybrid {
        background: no-repeat center url(/images/phoenix.png);
        width: 30%;
        height: 30%;
        background-size: contain;
        filter: blur(0.7px);
    }
</style>
<link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
<div class="main">
    <div class="box">
        <div class="hybrid"></div>
        <h2 class="title">Hybrid Storage</h2>
        <div class="subtitle">Uploads of up to 50MB are allowed</div>
        <div class="upload" >Uploads of up to 50MB are allowed</div>
        <input id="fileupload" type="file" style="display:none;" name="files[]" data-url="/upload" multiple>
        <script>
            $('.upload').fileupload({
                url: '/upload',
                dataType: 'json',
                dropZone: $('.upload'),
                fileInput: $('#fileupload')
            })
            $('.upload').on('click', function(){
                $('input').click();
            });
        </script>
    </div>
</div>

